{
  "$schema": "https://arkit.js.org/schema.json",
  "excludePatterns": ["__tests__/"],
  "components": [
    {
      "type": "Main",
      "patterns": ["index.ts"]
    },
    {
      "type": "Config",
      "patterns": ["bin/functions/config/*.ts"]
    },
    {
      "type": "Filesystem",
      "patterns": ["bin/functions/filesystem/*.ts"]
    },
    {
      "type": "Helpers",
      "patterns": ["bin/functions/helpers/*.ts"]
    },
    {
      "type": "Process",
      "patterns": ["bin/functions/process/*.ts"]
    },
    {
      "type": "Tokens",
      "patterns": ["bin/functions/tokens/*.ts"]
    }
  ],
  "output": [
    {
      "path": "arkit.svg",
      "groups": [
        {
          "first": true,
          "type": "Main",
          "components": ["Main"]
        },
        {
          "type": "Config",
          "components": ["Config"]
        },
        {
          "type": "Filesystem",
          "components": ["Filesystem"]
        },
        {
          "type": "Helpers",
          "components": ["Helpers"]
        },
        {
          "type": "Process",
          "components": ["Process"]
        },
        {
          "type": "Tokens",
          "components": ["Tokens"]
        }
      ]
    }
  ]
}
